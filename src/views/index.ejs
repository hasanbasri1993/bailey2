<%- include('header') -%>
<h1>
    <%= title %>
</h1>



<div class="container">
    <div class="columns">
        <div class="column col-xs-6">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <td>Id Instance</td>
                    <td>Name</td>
                    <td>Webhook</td>
                    <td>Phone</td>
                    <td>Status</td>
                </tr>
                </thead>
                <tbody>
                <% data.forEach(function(user){ %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.name %></td>
                        <td><%= user.webhook %></td>
                        <td><%= user.phone %></td>
                        <td><a href="/<%= user.id %>/toggle/<%= user.status %>">
                                <% if (user.status === "1") { %>
                                    <h2>Active</h2>
                                <% } else { %>
                                    <h2>Inactive</h2>
                                <% } %>
                            </a></td>
                    </tr>
                <% }); %>

                </tbody>
            </table>
        </div>
    </div>
</div>


<%- include('footer') -%>
